    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "preLaunchTask": "grunt",
            "restart": true,
            "name": "Debug using node",
            "program": "${workspaceFolder}\\bin\\www",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug using nodemon",
            "runtimeExecutable": "nodemon",
            "preLaunchTask": "grunt",
            "program": "${workspaceFolder}/bin/www",
            "restart": false,
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        }
    ]
}